<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sha.mapper.UserMapper">
    <select id="selectByUserId" resultType="com.sha.entity.User">
        select *from user where id = #{id}
    </select>
    <select id="selectByUserName" resultType="com.sha.entity.User">
        select *from user where username = #{username}
    </select>
</mapper>