<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sha.mapper.VoteMapper">
    <select id="selectById" resultType="com.sha.entity.Vote">
        select *from votes where id = #{id}
    </select>
    <insert id="insertVote" parameterType="com.sha.entity.Vote">
        insert into votes (id,pId,poll) value (#{id},#{pId},#{poll})
    </insert>
    <update id="updateVote" parameterType="com.sha.entity.Vote">
        update votes set poll=#{poll} where pId=#{pId}
    </update>
    <select id="selectByPid" resultType="com.sha.entity.Vote">
        select *from votes where pId = #{pId}
    </select>
</mapper>